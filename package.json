{
  "name": "node-typescript-template",
  "version": "0.1.2",
  "description": "Template for Node.js projects using TypeScript, Vitest, ESLint, Prettier, Husky, Standard-Version, and TypeORM",
  "main": "dist/index.js",
  "scripts": {
    "tsoa:spec": "tsoa spec",
    "tsoa:routes": "tsoa routes",
    "build": "npm run tsoa:spec && npm run tsoa:routes && tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write .",
    "test": "vitest --reporter verbose",
    "test:watch": "vitest -w",
    "release": "standard-version"
  },
  "dependencies": {
    "express": "^5.1.0",
    "http-errors": "^2.0.0",
    "nanoid": "^5.1.5",
    "redoc-express": "^2.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "tsx": "^4.20.5",
    "zod-class": "^0.0.18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/express": "^5.0.3",
    "@types/node": "^20.11.30",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "prisma": "^6.16.2",
    "prisma-zod-generator": "^1.17.8",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
